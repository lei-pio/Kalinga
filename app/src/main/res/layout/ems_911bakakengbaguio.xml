<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="25dp"
    android:layout_height="match_parent"
    tools:context=".Caregiver.EMS_911">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:id="@+id/logo"
        android:src="@drawable/header"/>

    <TextView
        style="@style/Headers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="EMERGENCY INFORMATION"
        android:textAlignment="center"
        android:gravity="center_vertical"
        tools:ignore="RtlCompat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Patient.PatientInformation"
        android:layout_margin="15dp"
        android:background="@drawable/text_box_border"
        android:orientation="vertical"
        android:layout_weight="3"
        tools:ignore="ExtraText">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/green"
            android:padding="10dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/account_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/RegisterFieldLabels"
                android:layout_gravity="center_vertical"
                android:layout_weight="5"
                android:text="911 (Bakakeng Baguio)" />

        </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/RegisterFieldLabels"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TELEPHONE" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ContactNumbers"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="(074) 443-5678" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Patient.PatientInformation"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:layout_weight="6"
        tools:ignore="ExtraText">
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical"
        android:layout_weight="0">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/text_box_border"
            style="@style/Back_Buttons"
            android:id="@+id/contact_911"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:hint="CONTACT" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/text_box_border"
            style="@style/Back_Buttons"
            android:id="@+id/nineoneone_back"
            android:textStyle="bold"
            android:textSize="15sp"
            android:hint="BACK" />

    </LinearLayout>

</LinearLayout>