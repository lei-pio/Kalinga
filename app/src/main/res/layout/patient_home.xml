<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context=".Patient.PatientHome"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="213dp"
        android:layout_height="87dp"
        app:srcCompat="@drawable/kalingav_2" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/patient_menu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:layout_marginTop="4dp"
            app:srcCompat="@drawable/burger_icon" />

        <EditText
            android:id="@+id/editTextText2"
            style="@style/RegisterFields"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="48dp"
            android:background="@drawable/text_box_border"
            android:hint="SEARCH"
            android:inputType="text" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="29dp"
            android:clickable="true"
            android:src="@drawable/search" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="5"
        android:layout_marginRight="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/user"
            android:background="@drawable/text_box_border"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"

                android:layout_gravity="center_vertical"
                android:src="@drawable/account_icon">
            </ImageView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:text="MARIA DEL NORTE"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    style="@style/RegisterFieldLabels"
                    android:layout_weight="0"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="match_parent"
                    android:text="EMPLOYMENT: Full-time"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    style="@style/RegisterFields"
                    android:padding="0dp"
                    android:layout_weight="0"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="match_parent"
                    android:text="STATUS: Hired"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    style="@style/RegisterFields"
                    android:layout_weight="0"
                    android:padding="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/text_box_border"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"

                android:layout_gravity="center_vertical"
                android:src="@drawable/account_icon">
            </ImageView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:text="JAMES VELASCO"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    style="@style/RegisterFieldLabels"
                    android:layout_weight="0"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="match_parent"
                    android:text="EMPLOYMENT: Full-time"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    style="@style/RegisterFields"
                    android:padding="0dp"
                    android:layout_weight="0"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="match_parent"
                    android:text="STATUS: Available"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    style="@style/RegisterFields"
                    android:layout_weight="0"
                    android:padding="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/text_box_border"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"

                android:layout_gravity="center_vertical"
                android:src="@drawable/account_icon">
            </ImageView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:text="JULIA DE VERA"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    style="@style/RegisterFieldLabels"
                    android:layout_weight="0"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="match_parent"
                    android:text="EMPLOYMENT: PART-TIME"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    style="@style/RegisterFields"
                    android:padding="0dp"
                    android:layout_weight="0"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="match_parent"
                    android:text="STATUS: Hired"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    style="@style/RegisterFields"
                    android:layout_weight="0"
                    android:padding="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/text_box_border"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"

                android:layout_gravity="center_vertical"
                android:src="@drawable/account_icon">
            </ImageView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:text="JOSHUA DE LEON"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    style="@style/RegisterFieldLabels"
                    android:layout_weight="0"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="match_parent"
                    android:text="EMPLOYMENT: PART-TIME"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    style="@style/RegisterFields"
                    android:padding="0dp"
                    android:layout_weight="0"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="match_parent"
                    android:text="STATUS: Available"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    style="@style/RegisterFields"
                    android:layout_weight="0"
                    android:padding="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>



    </LinearLayout>


</LinearLayout>